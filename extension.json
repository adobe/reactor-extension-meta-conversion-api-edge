{
  "displayName": "Meta Conversions API Extension",
  "name": "facebook_conversions_api_extension",
  "iconPath": "resources/icons/meta.svg",
  "platform": "edge",
  "version": "1.1.0",
  "description": "Send web events to Meta's Conversions API.",
  "author": {
    "name": "Adobe",
    "url": "http://adobe.com"
  },
  "exchangeUrl": "https://partners.adobe.com/exchangeprogram/experiencecloud/exchange.details.105509.html",
  "viewBasePath": "dist/",
  "configuration": {
    "viewPath": "configuration/configuration.html",
    "schema": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
        "pixelId": {
          "type": "string",
          "minLength": 1
        },
        "accessToken": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "required": ["pixelId", "accessToken"]
    }
  },
  "actions": [
    {
      "displayName": "Send Conversions API Event",
      "name": "send_capi_data",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "eventName": {
            "type": "string",
            "minLength": 1
          },
          "eventTime": {
            "type": "string",
            "minLength": 1
          },
          "eventSourceUrl": {
            "type": "string",
            "minLength": 1
          },
          "eventId": {
            "type": "string",
            "minLength": 1
          },
          "optOut": {
            "type": "string",
            "minLength": 1
          },
          "actionSource": {
            "type": "string",
            "minLength": 1
          },
          "lduEnabled": {
            "type": "boolean"
          },
          "email": {
            "type": "string",
            "minLength": 1
          },
          "phone": {
            "type": "string",
            "minLength": 1
          },
          "firstName": {
            "type": "string",
            "minLength": 1
          },
          "lastName": {
            "type": "string",
            "minLength": 1
          },
          "dob": {
            "type": "string",
            "minLength": 1
          },
          "gender": {
            "type": "string",
            "minLength": 1
          },
          "city": {
            "type": "string",
            "minLength": 1
          },
          "state": {
            "type": "string",
            "minLength": 1
          },
          "zip": {
            "type": "string",
            "minLength": 1
          },
          "country": {
            "type": "string",
            "minLength": 1
          },
          "externalId": {
            "type": "string",
            "minLength": 1
          },
          "clientIpAddress": {
            "type": "string",
            "minLength": 1
          },
          "clientUserAgent": {
            "type": "string",
            "minLength": 1
          },
          "fbc": {
            "type": "string",
            "minLength": 1
          },
          "fbp": {
            "type": "string",
            "minLength": 1
          },
          "subscriptionId": {
            "type": "string",
            "minLength": 1
          },
          "fbLoginId": {
            "type": "string",
            "minLength": 1
          },
          "leadId": {
            "type": "string",
            "minLength": 1
          },
          "customData": {
            "oneOf": [
              {
                "type": "object"
              },
              {
                "type": "string",
                "minLength": 1
              }
            ]
          },
          "isTestEvent": {
            "type": "boolean"
          },
          "testEventCode": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false,
        "required": ["eventName", "eventTime", "actionSource"]
      },
      "libPath": "src/lib/actions/sendCapiData.js",
      "viewPath": "actions/sendCapiData.html"
    }
  ]
}
